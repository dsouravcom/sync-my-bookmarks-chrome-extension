{
  "manifest_version": 3,
  "name": "Sync My Bookmarks",
  "version": "1.0",
  "description": "Sync My Bookmarks a modern and beautiful bookmark manager with search, organization, and quick access features",
  "permissions": ["bookmarks", "tabs", "storage", "notifications", "alarms"],
  "action": {
    "default_popup": "index.html",
    "default_title": "Sync My Bookmarks",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["fullscreen.html", "verify.html", "profile.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
